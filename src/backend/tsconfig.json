{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "../../build/backend",
    "rootDir": ".",
    "esModuleInterop": true
  },
  "include": [
    "./**/*.ts",
    "./src/backend/src/**/*.ts", // Include existing files
    "./src/backend/src/controllers/**/*.ts", // Include controller files
    "./src/backend/src/services/**/*.ts", // Include service files
    "./src/**/*.ts", // Include backend source files
    "./src/common/**/*.ts" // Include common DTO files
  ]
}
