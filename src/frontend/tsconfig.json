{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "outDir": "../../dist/frontend",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
  },
  "include": [
    "./**/*.tsx",
    "./src/**/*.ts", // Include frontend source files
    "./src/common/**/*.ts" // Include common DTO files
  ],
  "exclude": [
    "node_modules"
  ]
}
